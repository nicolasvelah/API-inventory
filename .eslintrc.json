{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "comma-dangle": "off",
    "import/extensions": "off",
    "no-throw-literal": "off",
    "no-underscore-dangle": "off",
    "spaced-comment": "off",
    "@typescript-eslint/no-inferrable-types": "off",
    "operator-linebreak": "off",
    "max-len": "off",
    "object-curly-newline": "off",
    "no-console": "off",
    "linebreak-style": "off",
    "radix": "off",
    "no-plusplus": "off",
    "class-methods-use-this": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts"]
      }
    }
  }
}
